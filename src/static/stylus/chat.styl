$theme := {
  red : #e7442e
  orange : #f17051
  grey : #dadada
}

for classname, color in $theme
  .chat-{classname}
    background: color
    background-color: color !important
  .chat-{classname}--text
    color: color !important

.box-container
  display flex
  align-items center
  justify-content center
  

.signin-box
  border-radius 5px
  box-shadow: 0px 0px 7px 3px #f3f3f3;

.width-100
  width 100%

.input-box
  display block
  border-radius 5px
  padding 3px 6px
  border 1px solid lightgrey

.own-info
  padding 10px

.circle
  position:relative
  width:45px
  padding-bottom:45px
  border-radius:50%

.circle-h3
  position:absolute
  top:50%
  left:50%
  transform: translate(-50%, -50%)
  margin:0

.profile-block
  display flex
  position relative
  align-items center
  & .options
    position absolute
    right 2%
    top 30%
    opacity 0.5
  & .countBadge
    position absolute
    right 5%
    top 30%
    border-radius 50%
    padding 1px 8px
  @media (max-width: 576px)
    & .options
      right 5%
    & .countBadge
      right 10%
    
  


.user-circle
  position:relative
  width:40px
  padding-bottom:40px
  border-radius:50%

.title-text
  margin 20px 20px 10px 20px !important

.back-arrow
  position absolute
  z-index 10

.call-button
  position absolute
  right 0px
  z-index 10

.msg-input-div
  position absolute
  bottom 0px

.msg-input
  background none
  border-radius 20px
  &:focus
    background none

.msg-container
  width fit-content
  padding 10px 15px
  max-width 70%

.own-message
  margin-right 30px
  background #f17051
  border-radius 10px 10px 0px 10px
  &:after
    content ""
    position absolute
    display block
    width 0px
    top auto
    bottom 0px
    left auto
    right -9px
    margin-top 0px
    border-style solid
    border-width 10px 0px 0px 10px
    border-color transparent #f17051

.else-message
  margin-left 30px
  background #0099b5
  border-radius 10px 10px 10px 0px
  &:after
    content ""
    position absolute
    display block
    width 0px
    top auto
    bottom 0px
    left -9px
    right auto
    margin-top 0px
    border-style solid
    border-width 10px 10px 0px 0px
    border-color transparent #0099b5

.flex-end
  justify-content flex-end

.flex-start
  justify-content flex-start

.msg-list-container
  max-height 80vh
  overflow auto
  display flex
  flex-direction column-reverse

.max-width-84
  max-width 84%

.animate-block
  animation displayK 1s forwards
  animation-timing-function cubic-bezier(0.785, 0.135, 0.15, 0.86)

@keyframes displayK
  0%
    opacity 0
  100%
    opacity 1